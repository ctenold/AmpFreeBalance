{
  "name": "amp-free-balance",
  "displayName": "Amp Free Balance",
  "description": "Real-time monitoring of your Amp API free tier balance and quota usage",
  "version": "1.1.0",
  "publisher": "ampdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctenold/AmpFreeBalance"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Monitoring", "Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "amp-balance-container",
          "title": "Amp Free Balance",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "amp-balance-container": [
        {
          "id": "amp-balance-view",
          "name": "Free Balance",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "amp-free-balance.show",
        "title": "Show Free Balance Status",
        "category": "Amp Free Balance"
      },
      {
        "command": "amp-free-balance.refresh",
        "title": "Refresh Balance Data",
        "category": "Amp Free Balance",
        "icon": "$(refresh)"
      },
      {
        "command": "amp-free-balance.authenticate",
        "title": "Configure Session Token",
        "category": "Amp Free Balance"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "amp-free-balance.refresh",
          "when": "view == amp-balance-view",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Amp Free Balance",
        "properties": {
          "ampFreeBalance.accessToken": {
            "type": "string",
            "default": "",
            "description": "Session authentication token for Amp API access",
            "markdownDescription": "Your Amp session authentication token. **⚠️ Keep this secret** - do not commit to version control! See 'Configure Amp Session' command for automated setup, or manually retrieve from ampcode.com settings page."
          },
          "ampFreeBalance.apiUrl": {
            "type": "string",
            "default": "https://ampcode.com/_app/remote/w6b2h6/getFreeTierUsage",
            "description": "API endpoint for fetching free tier balance data"
          },
          "ampFreeBalance.refreshInterval": {
            "type": "number",
            "default": 5,
            "description": "Automatic refresh interval in minutes"
          },
          "ampFreeBalance.lowBalanceThreshold": {
            "type": "number",
            "default": 1,
            "description": "Low balance warning threshold in dollars",
            "markdownDescription": "Show warning alert when balance drops below this amount (in USD). Set to 0 to disable. Default: $1.00"
          }
        }
      }
    ]
  },
  "scripts": {},
  "devDependencies": {
    "@types/vscode": "^1.75.0"
  }
}
